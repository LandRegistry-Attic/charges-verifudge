#!/bin/sh
### BEGIN INIT INFO
# Provides:          <%=@module_name%>
# Required-Start:    $local_fs $network $named $time $syslog
# Required-Stop:     $local_fs $network $named $time $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Description:       Controls the <%=@module_name%> for backwards people who don't like the future ;-P
### END INIT INFO

start() {
  sudo systemctl start <%=@module_name%>.service
}

stop() {
  sudo systemctl stop <%=@module_name%>.service
}

status() {
  sudo systemctl status <%=@module_name%>.service
}

logs() {
  sudo journalctl -u <%=@module_name%>
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  status)
    status
    ;;
  info)
    status
    ;;
  restart)
    stop
    start
    ;;
  logs)
    logs
    ;;
  *)
    echo "Usage: $0 {start|stop|info|restart|logs}"
esac
